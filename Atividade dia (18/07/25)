1-
#include <stdio.h>

int main() {
    int dia, mes, ano;

    printf("Digite o dia: ");
    scanf("%d", &dia);

    printf("Digite o mes: ");
    scanf("%d", &mes);

    printf("Digite o ano : ");
    scanf("%d", &ano);

    
    printf("Data formatada: %02d/%02d/%02d\n", dia, mes, ano );

    return 0;
}




2-
#include <stdio.h>

int main() {
    int ano,mes,dia;

    printf("Escreva o ano:  ");
    scanf("%d",&ano);

    printf("Digite o mes: ");
    scanf("%d",&mes);

    printf("Digite o dia: ");
    scanf("%d",&dia);

    printf("A data no formato aaaa/mm/dd e %d/%02d/%d\n", ano, mes, dia );

    printf("A data no formato dd/mm/aaaa e %d/%02d/%02d",dia, mes, ano);
    
    return 0;
}

3-
#include <stdio.h>

int main() {
    float litros,km,taxa;
    printf("Litros que o tanque comporta: ");
    scanf("%f",&litros);

    printf("Os KM percorridos: ");
    scanf("%f",&km);

    taxa=km/litros;

    printf("A taxa km/litros para esse tanque foi de %f",taxa);

    return 0;
}

4-
#include <stdio.h>

int main() {
    int num;

    printf("Digite um numero: ");
    scanf("%d",&num);

    if(num%2==0){
        printf("O numero e par!! ");
    }else{
        printf("o numero e impar!! ");
    }

    return 0;
}
